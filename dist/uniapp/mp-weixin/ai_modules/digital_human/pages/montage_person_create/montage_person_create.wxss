.material-type-item{position:relative;z-index:10;display:flex;align-items:center;justify-content:center;border-radius:16rpx;color:#000;transition-property:color,background-color,border-color,text-decoration-color,fill,stroke;transition-timing-function:cubic-bezier(.4,0,.2,1);transition-duration:.5s}.material-type-item.active{position:relative;font-weight:700;color:var(--color-black, #000000)}.tab-slider{position:absolute;top:4rpx;left:0px;height:calc(100% - 10rpx);width:50%;border-radius:16rpx;--tw-bg-opacity: 1;background-color:rgb(249 250 251 / var(--tw-bg-opacity));transition-property:all;transition-timing-function:cubic-bezier(.4,0,.2,1);transition-duration:.5s}.tab-slider:after{content:"";position:absolute;bottom:0px;height:4rpx;width:20%;background-color:var(--color-black, #000000);left:0;right:0;margin:auto}
